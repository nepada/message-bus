{
    "name": "nepada/message-bus",
    "type": "library",
    "license": "BSD-3-Clause",
    "description": "Opinionated message bus built on top of symfony/messenger.",
    "keywords": ["messenger", "message bus"],
    "support": {
        "email": "petr@pada.cz",
        "issues": "https://github.com/nepada/message-bus/issues"
    },
    "authors": [
        {
            "name": "Petr Morávek",
            "email": "petr@pada.cz"
        },
        {
            "name": "Ondřej Bouda",
            "email": "ondrej.bouda@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.4.0 <8.2",
        "symfony/messenger": "^5.0@dev || ^6.0@dev",
        "psr/container": "^1.0 || ^2.0",
        "psr/log": "^1.1 || ^2.0 || ^3.0"
    },
    "require-dev": {
        "nette/tester": "2.4.1",
        "phpstan/phpstan": "1.4.5",
        "phpstan/phpstan-strict-rules": "1.1.0",
        "nepada/phpstan-nette-tester": "0.4.0",
        "spaze/phpstan-disallowed-calls": "2.2.0",
        "php-parallel-lint/php-parallel-lint": "1.3.2",
        "nepada/coding-standard": "7.4.2"
    },
    "suggest": {
        "nepada/message-bus-doctrine": "for Doctrine ORM integration"
    },
    "autoload": {
        "psr-4": {
            "Nepada\\MessageBus\\": "src/MessageBus/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "NepadaTests\\": "tests/"
        }
    },
    "config": {
        "platform-check": false
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.1-dev"
        }
    }
}
