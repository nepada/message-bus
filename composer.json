{
    "name": "nepada/message-bus",
    "type": "library",
    "license": "BSD-3-Clause",
    "description": "Opinionated message bus built on top of symfony/messenger.",
    "keywords": ["messenger", "message bus"],
    "support": {
        "email": "petr@pada.cz",
        "issues": "https://github.com/nepada/message-bus/issues"
    },
    "authors": [
        {
            "name": "Petr Morávek",
            "email": "petr@pada.cz"
        },
        {
            "name": "Ondřej Bouda",
            "email": "ondrej.bouda@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.2.0 <8.5",
        "symfony/messenger": "^6.4.3@dev || ^7.0.3@dev",
        "psr/container": "^1.0 || ^2.0",
        "psr/log": "^1.1 || ^2.0 || ^3.0"
    },
    "require-dev": {
        "nette/tester": "2.5.4",
        "phpstan/phpstan": "1.12.7",
        "phpstan/phpstan-strict-rules": "1.6.1",
        "nepada/phpstan-nette-tester": "1.2.1",
        "spaze/phpstan-disallowed-calls": "3.5.1",
        "shipmonk/phpstan-rules": "3.2.1",
        "php-parallel-lint/php-parallel-lint": "1.4.0",
        "nepada/coding-standard": "7.14.1",
        "composer-runtime-api": "^2.0",
        "composer/semver": "3.4.3"
    },
    "suggest": {
        "nepada/message-bus-doctrine": "for Doctrine ORM integration"
    },
    "autoload": {
        "psr-4": {
            "Nepada\\MessageBus\\": "src/MessageBus/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "NepadaTests\\": "tests/"
        }
    },
    "config": {
        "platform-check": false,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": false
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "3.0-dev"
        }
    }
}
